{{> navigationadmin}}

<div class="homeadmin mt-4">
    <div class="container">

        <div class="row text-center mb-3">
            <div class="col">
                <h1 class="text-center"> <strong>Eventos UTP</strong></h1>
            </div>
            
        </div>

        <div class="row">
            <div class="card-columns">
                {{#each noticias}}
                    <div class="card">
                        <img src="/static/{{pathimg}}" alt="" class="card-img-top">  
                        <div class="card-body">
                            <h5>{{title}}</h5>
                            <p class="card-text">{{description}}</p>
                            <a href="/admin/noticia/{{_id}}" class="btn btn-ver-noticia">Ver</a>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>

    </div>

    
    
</div>
