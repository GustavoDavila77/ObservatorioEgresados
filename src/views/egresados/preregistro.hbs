<!-- Pre-Registro de egresados col-sm-4 offset-sm-4 col-md-4 offset-md-4 -->
{{> navigation}}
<div class="preregistro">
    <div class="container">
        <div class="row text-center mt-5">
            <div class="col-8 offset-2 col-md-4 offset-md-4">
                <h4 class="titles mb-4"><STRONg>Pre-Registro</STRONg></h4>
                
                <form action="/egresados/preregistro" method="POST">
                    <div class="form-group ">
                        <p><strong>Nota:</strong> Estimado Egresado, el sistema validará los datos y le enviará un correo para completar el registro</p>
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" name="dni" placeholder="Cédula" value="{{dni}}" required>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Correo" value="{{email}}" required>
                    </div>

                    <div class="form-group mt-4">
                        <button class="btn btn-enter">
                            Enviar 
                        </button>
                    </div>
                    
                    <div class="form-group">
                        <a href="/">Atras</a>
                    </div>
                    
                
                </form>
            </div>
        </div>
    </div>
</div>
